<UserControl x:Class="ScriptHandler.DesignDiagram.Views.DesignDiagramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Controls.Views;assembly=Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:converters="clr-namespace:ScriptHandler.Converter"
             xmlns:local="clr-namespace:ScriptHandler.DesignDiagram.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Controls;component/Resources/ButtonWithIcon.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IsChangedToBackgroundConverter x:Key="IsChangedToBackgroundConverter"/>

        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.InputBindings>

        <KeyBinding Command="{Binding SaveDiagramCommand}" 
                            Gesture="CTRL+S" />

    </UserControl.InputBindings>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal">

                <Button Style="{StaticResource ButtonWithIconStyle}"
                    Width="25"
                    Height="25"
                    Margin="0,0,5,0"
                    ToolTip="Save dashborad"
                    Command="{Binding SaveDiagramCommand}"
                    VerticalAlignment="Center">
                    <iconPacks:Material Kind="ContentSave" />
                </Button>

            </StackPanel>

            <controls:HeaderView Grid.Column="2" 
                     Title="{Binding DesignDiagram.Name}" 
                     HeaderBackground="{Binding IsChanged, Converter={StaticResource IsChangedToBackgroundConverter}}"
                     FontSize="24" 
                     Margin="0,2"/>

        </Grid>

        <Line Grid.Row="1" X1="1" Stretch="Fill" Stroke="{DynamicResource MahApps.Brushes.Accent2}" />


        <syncfusion:SfDiagram Grid.Row="2"
                              Name="diagram"
                              DefaultConnectorType="Orthogonal"
                              Nodes="{Binding Nodes}"
                              SnapSettings="{Binding SnapSettings}"
                              PageSettings="{Binding PageSettings}"
                              Connectors="{Binding Connectors}"
                              SelectedItems="{Binding SelectedItems}"
                              
                              ItemAddedCommand="{Binding ItemAddedCommand}"
                              ItemSelectedCommand="{Binding ItemSelectedCommand}"
                              ItemDeletedCommand="{Binding ItemDeletedCommand}"
                              ConnectorSourceChangedCommand="{Binding ConnectorSourceChangedCommand}"
                              ConnectorTargetChangedCommand="{Binding ConnectorTargetChangedCommand}"
                              
                              
                              Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

            <i:Interaction.Triggers>

                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Diagram_DropCommand, 
                                                 Mode=OneWay, 
                                                 RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=syncfusion:SfDiagram}}" 
                               PassEventArgsToCommand="True"/>
                </i:EventTrigger>

                

                <i:EventTrigger EventName="MouseEnter">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Diagram_MouseEnterCommand, 
                                                 Mode=OneWay, 
                                                 RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=syncfusion:SfDiagram}}" 
                               PassEventArgsToCommand="True"/>
                </i:EventTrigger>

                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Diagram_PreviewMouseLeftButtonDownCommant, 
                                                 Mode=OneWay, 
                                                 RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=syncfusion:SfDiagram}}" 
                               PassEventArgsToCommand="True"/>
                </i:EventTrigger>

                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Diagram_PreviewMouseLeftButtonUpCommant, 
                                                 Mode=OneWay, 
                                                 RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=syncfusion:SfDiagram}}" 
                               PassEventArgsToCommand="True"/>
                </i:EventTrigger>

                <i:EventTrigger EventName="MouseMove">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Diagram_MouseMoveCommand, 
                                                 Mode=OneWay, 
                                                 RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=syncfusion:SfDiagram}}" 
                               PassEventArgsToCommand="True"/>
                </i:EventTrigger>


            </i:Interaction.Triggers>

        </syncfusion:SfDiagram>


    </Grid>
</UserControl>
